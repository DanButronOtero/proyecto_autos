<%- include('../../templates/header'); -%>
    <!-- Banner Area -->
    <div class="banner-item banner-1 steller-parallax" data-stellar-background-ratio="0.5" style="height: 10em;">

    </div>

    <!-- Banner Area End -->
    <div class="section section-padding more-feature-section style-2" data-stellar-background-ratio="0.5">
        <div class="container steller-parallax">
            <h1>EMPLEADOS</h1>
            <table class="table">
                <thead class="thead-light">
                    <th>id</th>
                    <th>nombre</th>
                    <th>apellido_pat</th>
                    <th>apellido_mat</th>
                    <th>contratacion</th>
                    <th>salario</th>
                    <th>id_puesto</th>
                    <th>estado_logico</th>
                    <th>editar</th>
                    <th>borrar</th>
                </thead>
                <% for (let i = 0; i < registros.length; i++) { %>
                    <thead>
                        <th>
                            <%= registros[i].id %>
                        </th>
                        <th>
                            <%= registros[i].nombre %>
                        </th>
                        <th>
                            <%= registros[i].apellido_pat %>
                        </th>
                        <th>
                            <%= registros[i].apellido_mat %>
                        </th>
                        <th>
                            <%= registros[i].contratacion %>
                        </th>
                        <th>
                            <%= registros[i].salario %>
                        </th>
                        <th>
                            <%= registros[i].id_puesto %>
                        </th>
                        <th>
                            <%= registros[i].estado_logico %>
                        </th>
                        <th>
                            <form action="/empleados/update" method="GET">
                                <button type="submit" class="btn btn-primary" aria-label="Left Align">
                            <input type="hidden" name="id" value="<%=registros[i].id  %> ">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                          </button>
                            </form>

                        </th>
                        <th>
                            <form action="/empleados/delete" method="post">
                                <button type="submit" class="btn btn-primary" aria-label="Left Align">
                            <input type="hidden" name="id" value="<%=registros[i].id  %> ">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                          </button>
                            </form>
                        </th>

                    </thead>

                    <% } %>
            </table>
            <div>
                <a class="btn btn-primary" href="/empleados/create" role="button">
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"> REGISTRAR</span>
                </a>

            </div>
        </div>
    </div>
    <%- include('../../templates/footer'); -%>